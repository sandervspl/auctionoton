{
  "name": "@auctionoton/extension",
  "version": "5.0.0",
  "description": "Code for auctionoton-extension.",
  "private": true,
  "main": "index.js",
  "author": "Sander Vispoel <sandervspl@github>",
  "license": "ISC",
  "scripts": {
    "build": "npm run css:extension && npm run css:form && cross-env NODE_ENV=production node esbuild.config.js",
    "start": "rm -rf ./dist && concurrently 'node esbuild.config.js' 'npm run css'",
    "css": "concurrently 'npm run css:extension -- --watch' 'npm run css:form -- --watch'",
    "postbuild": "cd dist; zip -D -r ../auctionoton-$npm_package_version.zip ./*",
    "ci:create-dist": "cd dist; zip -D -r ../auctionoton.zip ./*",
    "css:extension": "tailwindcss -i ./src/style.css -o ./dist/style.css",
    "css:form": "tailwindcss -i ./src/modules/browserAction/style.css -o ./dist/style_form.css",
    "preversion": "tsc --noEmit",
    "version": "npx json -I -f src/manifest.json -e \"this.version='$npm_package_version'\"; git add .",
    "postversion": "git push && git push --tags && npm run build && npm run mozilla",
    "mozilla": "zip -r auctionoton-$npm_package_version-source.zip ./src config.js defines.d.ts global.d.ts package.json package-lock.json README.md tsconfig.json webpack.config.js",
    "tc": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@tanstack/react-query": "^5.13.4",
    "@tanstack/react-query-devtools": "^5.13.5",
    "axios": "^1.6.2",
    "axios-rate-limit": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.3.2",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "immer": "^10.0.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "tsafe": "^1.6.5",
    "typed-query-selector": "^2.11.0",
    "valtio": "^1.12.1",
    "w3c-keys": "^1.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^120.0.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.15.18",
    "esbuild-plugin-svgr": "^2.1.0",
    "fs-extra": "^11.2.0",
    "node-notifier": "^10.0.1",
    "postcss-import": "^15.1.0",
    "rimraf": "3.0.2",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  }
}