{
  "name": "extension",
  "version": "4.1.0",
  "description": "Code for auctionoton-extension.",
  "private": true,
  "main": "index.js",
  "author": "Sander Vispoel <sandervspl@github>",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./src --ext .ts,.tsx --fix",
    "build": "npm run css:extension && npm run css:form && cross-env NODE_ENV=production node esbuild.config.js",
    "dev": "rm -rf ./dist && concurrently 'node esbuild.config.js' 'npm run css'",
    "css": "concurrently 'npm run css:extension -- --watch' 'npm run css:form -- --watch'",
    "postbuild": "cd dist; zip -D -r ../auctionoton-$npm_package_version.zip ./*",
    "ci:create-dist": "cd dist; zip -D -r ../auctionoton.zip ./*",
    "css:extension": "tailwindcss -i ./src/style.css -o ./dist/style.css",
    "css:form": "tailwindcss -i ./src/modules/browserAction/style.scss -o ./dist/style_form.css",
    "preversion": "tsc --noEmit",
    "version": "npx json -I -f src/manifest.json -e \"this.version='$npm_package_version'\"; git add .",
    "postversion": "git push && git push --tags && npm run build && npm run mozilla",
    "mozilla": "zip -r auctionoton-$npm_package_version-source.zip ./src config.js defines.d.ts global.d.ts package.json package-lock.json README.md tsconfig.json webpack.config.js",
    "tc": "tsc --noEmit"
  },
  "dependencies": {
    "@project/constants": "*",
    "@project/types": "*",
    "@project/utils": "*",
    "@project/validation": "*",
    "axios": "^1.6.2",
    "axios-rate-limit": "^1.3.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.10",
    "immer": "^9.0.21",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "tsafe": "^1.6.5",
    "typed-query-selector": "^2.11.0",
    "valtio": "^1.12.0",
    "w3c-keys": "^1.0.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/firefox-webext-browser": "^111.0.4",
    "@types/lodash": "^4.14.201",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.15.18",
    "esbuild-plugin-svgr": "^1.1.0",
    "eslint": "8.26.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-tailwindcss": "3.6.2",
    "fs-extra": "^11.1.1",
    "node-notifier": "^10.0.1",
    "postcss-import": "^15.1.0",
    "rimraf": "3.0.2",
    "tailwindcss": "^3.3.5",
    "typescript": "^4.9.5"
  }
}