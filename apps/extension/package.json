{
  "name": "extension",
  "version": "3.1.0",
  "description": "Code for auctionoton-extension.",
  "private": true,
  "main": "index.js",
  "author": "Sander Vispoel <sandervspl@github>",
  "license": "ISC",
  "scripts": {
    "lint": "eslint ./src --ext .ts,.tsx",
    "build": "NODE_ENV=production node esbuild.config.js",
    "dev": "rm -rf ./dist && npx concurrently 'node esbuild.config.js' 'npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch' 'npx tailwindcss -i ./src/modules/browserAction/style.scss -o ./dist/style_form.css --watch'",
    "postbuild": "cd dist; zip -D -r ../auctionoton-$npm_package_version.zip ./*; zip -d ../auctionoton-$npm_package_version.zip *.DS_Store",
    "preversion": "tsc --noEmit && npm run lint",
    "version": "npx json -I -f src/manifest.json -e \"this.version='$npm_package_version'\"; git add .",
    "postversion": "git push && git push --tags && npm run build && npm run mozilla",
    "mozilla": "zip -r auctionoton-$npm_package_version-source.zip ./src config.js defines.d.ts global.d.ts package.json package-lock.json README.md tsconfig.json webpack.config.js",
    "tc": "tsc --noEmit"
  },
  "dependencies": {
    "@project/constants": "*",
    "@project/types": "*",
    "@project/utils": "*",
    "@project/validation": "*",
    "dayjs": "1.10.7",
    "immer": "9.0.12",
    "lodash": "4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.26.1",
    "react-query": "3.34.14",
    "tsafe": "0.9.0",
    "typed-query-selector": "2.6.1",
    "valtio": "^1.3.0",
    "w3c-keys": "1.0.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.178",
    "@types/firefox-webext-browser": "94.0.1",
    "@types/lodash": "4.14.178",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "esbuild": "0.14.20",
    "esbuild-plugin-svgr": "1.0.0",
    "eslint": "8.8.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "fs-extra": "10.0.0",
    "node-notifier": "10.0.1",
    "postcss-import": "14.0.2",
    "rimraf": "3.0.2",
    "tailwindcss": "3.0.19",
    "typescript": "4.5.5"
  }
}
